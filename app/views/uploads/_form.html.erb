    <%= f.label "caption(only 25 letters)", :class => "inlinefrom", :style => "font-size: 19px;color: black;" %>
    </div>
    <%= f.text_field :title  %>
    
    <div class="form-group" style="margin-bottom: 0px; margin-top: 6px">
      <%= f.label :Add_Photo, :class => "inlinefrom", :style => "font-size: 19px;color: black;" %>
    </div>
    <%= f.file_field :picture, :class => "ups" %>
    <div class="form-group" style="margin-bottom: 0px; margin-top: 6px">
    <%= f.label :Description, :style => "font-size: 19px;color: black;", :disabled => true %>
