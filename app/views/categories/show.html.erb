<div class="homebox">
	<div class="ad-728-90home">
		<h1 style="color: white;"><%= @category.title %> Category</h1>
	</div>
	<div class="row">
		<% @uploads_reste.each do |ar| %>
	  <div class="col-md-4">
	  	<div class="thumb2">
    	
    	<%= link_to image_tag(ar.picture.url(:large), :style => "width: 100%;"), upload_url(ar) %>
    	<h3 style ="font-family: 'Roboto Condensed',sans-serif;text-shadow: 1px 1px 1px #000; color: white;font-size: 2.3em;line-height: 1;"><%= link_to ar.title, upload_url(ar) %></h3>
    	<p style="font-size: 19px;color: brown;padding: 0px 0px 0px 0px;"> Date: <%= ar.created_at.strftime("%B %d, 20%y") %></p>
    	<p style = "border-bottom: 1px solid white; width: 100%;"> By: <%= link_to ar.user.name, user_uploads_url(ar.user)%></p>
    	<p>
    	<span>Tags:</span><%  ar.tag_list.map do |t|   %>
    	<%= link_to t, tag_path(t), :class => "tagslist btn btn-warning" %>
    	<% end %>
    	</p>
    	</div>
    	
		</div>
		<% end %>

	</div>
	<div>
		<div class="ad-728-90home">
			 <div class="">
			    <%= paginate @uploads_reste, :outer_window => 3 %>
			 </div>
		</div>
	</div>
	
	<hr>